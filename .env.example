# Pickleball Scheduler - Docker Environment Variables
# Copy this file to .env and update values as needed

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# League Settings
LEAGUE_TIMEZONE=America/New_York

# Twilio SMS (Optional - leave empty for development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid Email (Optional - leave empty for development)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.com

# Environment
ENVIRONMENT=development
DEBUG=True
