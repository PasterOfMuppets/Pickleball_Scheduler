# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5433/pickleball_scheduler

# JWT
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# League Settings
LEAGUE_TIMEZONE=America/New_York

# Twilio (get these from twilio.com)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (get this from sendgrid.com)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourleague.com

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
